import random
import math
import statistics

# Функция для генерации списка случайных чисел
def generate_random_numbers(count, low, high):
    return [random.randint(low, high) for _ in range(count)]

# Ввод от пользователя
count = int(input("Введите количество случайных чисел для генерации: "))
low = int(input("Введите нижнюю границу диапазона: "))
high = int(input("Введите верхнюю границу диапазона: "))

# Генерация списка случайных чисел
random_numbers = generate_random_numbers(count, low, high)

# Вычисление среднее арифметическое
mean = statistics.mean(random_numbers)

# Вычисление медианы
median = statistics.median(random_numbers)

# Вычисление стандартного отклонения
std_dev = statistics.stdev(random_numbers)

# Вычисление квадратного корня из суммы всех чисел, округленного до двух знаков после запятой
sum_of_numbers = sum(random_numbers)
sqrt_sum_rounded = round(math.sqrt(sum_of_numbers), 2)

# Форматированный вывод
print(f"Сгенерированные числа: {random_numbers}")
print(f"Среднее: {mean:.2f}, Медиана: {median:.2f}, Стандартное отклонение: {std_dev:.2f}, Корень из суммы: {sqrt_sum_rounded}")
